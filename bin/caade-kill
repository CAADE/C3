#!/usr/bin/env node

var program = require('commander');
var Client = require('node-rest-client').Client;
var config = require('./caade-config');
var YAML = require('yamljs');
var _ = require('lodash');
var client = new Client();


program
  .option('-e, --env [environment name]', 'kill application in a specific environment')
  .option('-s, --signal <signal number>', 'kill with signum')
  .parse(process.argv);
var services = program.args;

var url = config.caadeUrl + "/application/kill";

var application = YAML.load('./caade-app.yaml');

if (application.name) {
  url += "?app=" + application.name
}

if (program.env) {
  url += "&env=" + program.env;
}
if (program.args.length > 0) {
  url += "&services=" + program.args;
}
// direct way
client.get(url, function (data, response) {
  // parsed response body as js object
  _.each(data.instances, function (instance) {
    console.log("Killed: " + instance.id + "\t" + instance.name);
  });
});
