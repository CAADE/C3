#!/usr/bin/env node

var program = require('commander');
var Client = require('node-rest-client').Client;
var config = require('./UHC-config');

var client = new Client();


program
  .option('-f, --force', 'Force deletion of the application and all of its running instances')
  .parse(process.argv);

var name = program.args;

var url = config.UHCUrl + "/application/delete?";

if(name) {
  url += "name=" + name[0];
}
if (program.force) {
  url += "&force=true";
}

console.log("URL:" + url);
client.get(url, function (data, response) {
  // parsed response body as js object
  console.log(data);
});
